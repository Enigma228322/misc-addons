        <field name="level" eval="0" />
    </record>

    <record id="account_financial_report_ohada_dash_line_5" model="ohada.financial.html.report.line">
        <field name="name"></field>
        <field name="code">ds_5</field>
        <field name="financial_report_id" ref="ohada_report_dash"/>
