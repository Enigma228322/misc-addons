<?xml version="1.0"?>
<odoo>
        <record id="change_options_form" model="ir.ui.view">
            <field name="name">ohada.dash.options.wizard</field>
            <field name="model">ohada.dash.options</field>
            <field name="arch" type="xml">
                <form string="Choose year">
                    <group class="oe_title">
                        <field name="current_year"/>
                        <field name="all_entries"/>
                    </group>
                    <footer>
                        <button name="change_options" string="Change" type="object" class="btn btn-sm btn-primary"/>
                        <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
 
        <record id="change_options_wizard" model="ir.actions.act_window">
            <field name="name">Change Options</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ohada.dash.options</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="change_options_form"/>
            <field name="target">new</field>
        </record>
</odoo>
