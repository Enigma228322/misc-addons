<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_advance_payment_inv" model="ir.ui.view">
        <field name="name">Invoice Orders</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='deposit_taxes_id']" position="after">
                <field name="trade_in_amount"
                       attrs="{'invisible': [('advance_payment_method', 'not in', ('trade_in', 'complete_trade_in'))]}"
                       readonly="1"/>
                <field name="journal_id"
                       attrs="{'invisible': [('advance_payment_method', 'not in', ('trade_in', 'complete_trade_in'))],
                               'required': [('advance_payment_method', 'in', ('trade_in', 'complete_trade_in'))]}"/>
                <field name="linked_invoice_line_ids"
                       attrs="{'invisible': [('advance_payment_method', 'not in', ('trade_in', 'complete_trade_in'))]}">
<!--                    <tree default_order="state,invoice_id">-->
                    <tree default_order="state,invoice_id" readonly="1" create="false">
                        <field name="is_trade_in_payment"/>
                        <field name="vendor_id"/>
                        <field name="date_invoice"/>
                        <field name="date_due"/>
                        <field name="origin"/>
                        <field name="amount_total_signed"/>
                        <field name="residual_signed"/>
                        <field name="state"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>



</odoo>
