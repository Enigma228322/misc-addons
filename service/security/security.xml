    <!-- <record id="group_manager" model="res.groups"><field name="name">Manager</field><field name="implied_ids" eval="[(4, ref('group_user'))]"/><field name="category_id" ref="module_management"/></record>-->
    <!-- user access -->
    <record id="group_service" model="res.groups">
        <field name="name">User: Access Own Documents Only</field>
        <field name="category_id" ref="module_management"/>
        <field eval="[(4, ref('base.group_user'))]" name="implied_ids"/>
        <field name="comment">the user will have access to his own data in the service application.</field>
    </record>
    <record id="group_service_user" model="res.groups">
        <field name="name">User: Access All Documents</field>
        <field name="category_id" ref="module_management"/>
        <!-- <field name="implied_ids" eval="[(4, ref('group_service'))]"/>-->
        <field name="comment">the user will have access to all records of everyone in the service application.</field>
    </record>
    <record id="group_service_manager" model="res.groups">
        <field name="name">Service Manager</field>
        <field name="comment">the user will have an access to the service configuration as well as statistic reports.</field>
        <field name="category_id" ref="module_management"/>
<!--         <field eval="[(4, ref('group_service_user'))]" name="implied_ids"/>
 -->        <field eval="[(4, ref('base.user_root'))]" name="users"/>
    </record>
    <!-- user access rules -->
    <record id="drm_rule_own_user" model="ir.rule">
        <field name="name">Own User</field>
        <field name="model_id" ref="model_drm_pickup"/>
        <field name="domain_force">[('technician_id', 'like', user.name)]</field>
        <field eval="[(4, ref('service.group_service'))]" name="groups"/>
    </record>
    <record id="drm_rule_all_user" model="ir.rule">
        <field name="name">All User</field>
        <field name="model_id" ref="model_drm_pickup"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field eval="[(4, ref('service.group_service_user'))]" name="groups"/>
        <field eval="True" name="perm_read"/>
        <field eval="False" name="perm_write"/>
        <field eval="False" name="perm_create"/>
        <field eval="False" name="perm_unlink"/>
    </record>
    <record id="drm_rule_own_user_repair" model="ir.rule">
        <field name="name">Own User</field>
        <field name="model_id" ref="model_service_repair_order"/>
        <field name="domain_force">[('mechanic_id.name', 'like', user.name)]</field>
        <field eval="[(4, ref('service.group_service'))]" name="groups"/>
    </record>
    <record id="drm_rule_all_user_repair" model="ir.rule">
        <field name="name">all User</field>
        <field name="model_id" ref="model_service_repair_order"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field eval="[(4, ref('service.group_service_user'))]" name="groups"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_write"/>
        <field eval="0" name="perm_create"/>
        <field eval="0" name="perm_unlink"/>
    </record>


