<odoo>
    <record id="module_management" model="ir.module.category">
        <field name="name">Service</field>
        <field name="description">User access level for this module</field>
        <field name="sequence">3</field>
    </record>
    <!-- <record id="group_user" model="res.groups"><field name="name">User: All Documents</field><field name="implied_ids" eval="[(4, ref('base.group_user'))]"/><field name="users" eval="[(4, ref('base.user_root'))]"/><field name="category_id" ref="module_management"/><field name="comment">the user will have access to all records of everyone in the service application.</field></record>-->
