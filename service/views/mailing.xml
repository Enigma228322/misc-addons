<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="annual_ir_action" model="ir.cron">
            <field name="name">Annual Customer Email</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="active">True</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
            <field eval="'service.mailing'" name="model"/>
            <field eval="'annual_email_trigger_action'" name="function"/>
        </record>
    </data>
    
    <data>
        <record id="email_template_annual_form" model="mail.template">
            <field name="name">Send by mail</field>
            <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
            <field name="subject">Service Reminder</field>
            <field name="auto_delete" eval="True" />
            <field name="record_name">Customer Name</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="body_html"><![CDATA[
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                    <p>Dear ${(object.name)}, </p>
                    <p>Welcome again . This is just a helpful reminder to schedule your service. The service should happen at 600 miles or 12 months. If you have already had your service, congrats !!</p> 
                    <p>Properly maintaining your ride at the factory specified intervals is required to keep your warranty valid.</p>
                     </div>


                ]]>
            </field>
        </record>
    </data>



    <data noupdate="1">
        <record id="m600_ir_action" model="ir.cron">
            <field name="name">600m Customer Email</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="active">True</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
            <field eval="'service.mailing'" name="model"/>
            <field eval="'email_trigger_600m_action'" name="function"/>
        </record>
    </data>
    
    <data>
        <record id="email_template_600_form" model="mail.template">
            <field name="name">Send by mail</field>
            <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
            <field name="subject">Service Reminder</field>
            <field name="auto_delete" eval="True" />
            <field name="record_name">Customer Name</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="body_html"><![CDATA[
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                    <p>Dear ${(object.name)}, </p>
                    <p>Welcome again . This is just a helpful reminder to schedule your service. The service should happen at 600 miles. If you have already had your service, congrats !!</p> 
                    <p>Properly maintaining your ride at the factory specified intervals is required to keep your warranty valid.</p>
                     </div>


                ]]>
            </field>
        </record>
    </data>
</odoo>
