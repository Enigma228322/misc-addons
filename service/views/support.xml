<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_support_tree" model="ir.ui.view">
      <field name="name">support.res.partner.tree</field>
      <field name="model">customer.support</field>
      <field name="type">tree</field>
      <field eval="8" name="priority"/>
      <field name="arch" type="xml">
        <tree>
          <field name="partner_id"/>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>
    <record id="view_support_form" model="ir.ui.view">
      <field name="name">support.res.partner.form</field>
      <field name="model">customer.support</field>
      <field name="type">form</field>
      <field eval="8" name="priority"/>
      <field name="arch" type="xml">
        <form>
          <group>
            <group>
              <field name="partner_id"/>
              <field name="name"/>
              <field name="description"/>
            </group>
          </group>
        </form>
      </field>
    </record>
    <record id="view_support_kanban" model="ir.ui.view">
      <field name="name">customer.support.kanban</field>
      <field name="model">customer.support</field>
      <field name="arch" type="xml">
        <kanban class="o_kanban_mobile">
          <field name="name"/>
          <field name="description"/>
          <field name="partner_id"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                <div class="row">
                  <div class="col-xs-6 text-muted">
                    <span>
                      <t t-esc="record.partner_id.value"/>
                    </span>
                  </div>
                  <div class="col-xs-6">
                    <span>
                      <t t-esc="record.name.value"/>
                      <t t-esc="record.description.value"/>
                    </span>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    <record id="view_task_cus_support_service_serach" model="ir.ui.view">
      <field name="name">cus.support.service.user.search</field>
      <field name="model">customer.support</field>
      <field name="arch" type="xml">
        <search string="Service Reports">
          <field filter_domain="['|','|',('name','ilike',self),('partner_id','ilike',self),('description','ilike',self)]" name="name" string="Repair Order"/>
        </search>
      </field>
    </record>
    <record id="support_action" model="ir.actions.act_window">
      <field name="name">Support</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">customer.support</field>
      <field name="view_type">form</field>
      <field name="view_mode">form,tree</field>
      <field name="view_id" ref="view_support_tree"/>
      <field name="search_view_id" ref="view_task_cus_support_service_serach"/>
    </record>
    <record id="support_action_form1" model="ir.actions.act_window.view">
      <field name="act_window_id" ref="support_action"/>
      <field eval="20" name="sequence"/>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_support_form"/>
    </record>
    <record id="support_action_tree" model="ir.actions.act_window.view">
      <field name="act_window_id" ref="support_action"/>
      <field eval="10" name="sequence"/>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_support_tree"/>
    </record>


        <menuitem id="support_general_menu" name="Support" parent="menu_service_root" sequence="5"/>
        
    <menuitem action="support_action" id="service_system_support_menu" name="Customer Support Tickets" parent="support_general_menu" sequence="1"/>
  </data>
</odoo>