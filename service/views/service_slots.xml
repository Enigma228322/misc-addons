<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_service_slot_tree" model="ir.ui.view">
            <field name="name">drm.service.slots.tree</field>
            <field name="model">drm.service.slots</field>
            <field name="type">tree</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="stop_date"/>
                    <field name="lift_available"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="view_service_slot_form" model="ir.ui.view">
            <field name="name">drm.service.slots.form</field>
            <field name="model">drm.service.slots</field>
            <field name="type">form</field>
            <field eval="3" name="priority"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <!-- <button string="Confirm" name="action_confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ('progress','done','cancel'))]}"/><button string="Pickup Done" name="action_progress" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ('confirm','done','cancel'))]}"/><button string="Cancel" name="action_cancel" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ('done'))]}"/><field name="state" widget="statusbar" statusbar_visible="confirm,progress,done,cancel" />-->
                </header>
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" nolabel="1"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Lift Slots">
                                <group>
                                    <field name="lift_available"/>
                                    <field name="start"/>
                                    <field name="stop"/>
                                    <field name="start_date"/>
                                    <field name="stop_date"/>
                                    <field class="oe_inline" name="duration" widget="float_time"/>
                                    <field name="allday"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="service_slot_action_calendar" model="ir.ui.view">
            <field name="name">drm.service.slots.calendar</field>
            <field name="model">drm.service.slots</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <!-- <calendar all_day="allday" color="name" date_delay="duration" date_start="start_date" date_stop="stop_date" display="[name]" string="Lifts"> -->
                <calendar all_day="allday" color="name" date_delay="duration" date_start="start_date" date_stop="stop_date" string="Lifts">
                    <field name="name"/>
                </calendar>
            </field>
        </record>
        <record id="service_slots_actions" model="ir.actions.act_window">
            <field name="name">Lift</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">drm.service.slots</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="context">{}</field>
        </record>
        <record id="service_slot_action_tree" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="service_slots_actions"/>
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_service_slot_tree"/>
        </record>
        <record id="service_slot_action_form" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="service_slots_actions"/>
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_service_slot_form"/>
        </record>
        <menuitem action="service_slots_actions" id="service_system_menu" name="Service Slots" parent="service_general_menu"/>
    </data>
</odoo>