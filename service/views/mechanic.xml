        <record id="drm_view_employee_priority_form" model="ir.ui.view">
        <field name="name">drm.hr.employee.leave.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[1]" position="inside">
                <group>
                    <field name="priority" widget="priority"/>
                    <field name="total_time" widget="total_time"/>
                    <field name="hourly_rate" widget="hourly_rate"/>
                    <field name="efficiency" widget="efficiency"/>
                    
                </group>
            </xpath>
        </field>
        </record>

        <record id="drm_view_employee_priority_tree" model="ir.ui.view">
        <field name="name">drm.hr.employee.leave.tree.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                    <field name="total_time" widget="total_time"/>
                    <field name="hourly_rate" widget="hourly_rate"/>
                    <field name="efficiency" widget="efficiency"/>

                </field>
        </field>
        </record>


        
        <record id="service_technicians_action" model="ir.actions.act_window">
            <field name="name">Technicians</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('department_id','ilike','Technician')]</field>
            <field name="context">{'default_department_id':'Technician'}</field>
            <field eval="False" name="view_id"/>
            <field name="search_view_id" ref="view_employee_filter"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click to add a new employee.
                </p>
                <p>With just a quick glance on the Odoo employee screen, you
                can easily find all the information you need for each person;
                contact data, job position, availability, etc.
              </p>
            </field>
        </record>
        <menuitem action="service_technicians_action" groups="service.group_service,service.group_service_manager,service.group_service_user" id="service_technicians_menu" name="Technicians" parent="service_general_menu"/>
    </data>
