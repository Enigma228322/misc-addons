<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_employee_filter" model="ir.ui.view">
            <field name="name">hr.employee.search</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <search string="Employees">
                    <field filter_domain="['|',('work_email','ilike',self),('name','ilike',self)]" name="name" string="Employees"/>
                    <field name="department_id"/>
                    <field groups="hr.group_hr_user" name="category_ids"/>
                    <field name="job_id"/>
                    <filter domain="[('message_needaction','=',True)]" name="message_needaction" string="Unread Messages"/>
                    <filter domain="[('active','=',False)]" name="inactive" string="Archived"/>
                    <group expand="0" string="Group By">
                        <filter context="{'group_by':'parent_id'}" domain="[]" string="Manager"/>
                        <filter context="{'group_by':'coach_id'}" domain="[]" string="Coach"/>
                        <filter context="{'group_by':'department_id'}" domain="[]" string="Department"/>
                        <filter context="{'group_by':'job_id'}" domain="[]" string="Job"/>
                        <filter context="{'group_by':'company_id'}" domain="[]" groups="base.group_multi_company" string="Company"/>
                    </group>
                </search>
            </field>
        </record>
