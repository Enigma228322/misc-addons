<odoo>
    <data>
        <!-- ========================Reports========================= -->
        <menuitem id="service_Report_menu" name="Reports" parent="menu_service_root" sequence="99"/>
        <record id="view_service_report_user_pivot" model="ir.ui.view">
            <field name="name">report.service.report.user.pivot</field>
            <field name="model">custom.service.report</field>
            <field name="arch" type="xml">
                <pivot disable_linking="True" display_quantity="true" string="Report Analysis">
                    <field name="partner_id" type="row"/>
                    <!-- <field name="price" type="measure"/> -->
                </pivot>
            </field>
        </record>
        <record id="view_service_report_user_graph" model="ir.ui.view">
            <field name="name">report.service.report.user.graph</field>
            <field name="model">custom.service.report</field>
            <field name="arch" type="xml">
                <graph string="Report Analysis" type="bar">
                    <field name="partner_id" type="row"/>
                    <field name="nbr" type="measure"/>
                    <field name="amt_total" type="measure"/>
                </graph>
            </field>
        </record>
        <record id="view_task_sevice_user_search" model="ir.ui.view">
            <field name="name">report.service.user.search</field>
            <field name="model">custom.service.report</field>
            <field name="arch" type="xml">
                <search string="Service Reports">
                    <field name="state"/>
                    <filter domain="[('state','in', ('QUOTE', 'Quote'))]" name="Quote" string="Quote"/>
                    <filter domain="[('state','in', ('APPROVE', 'Approve'))]" name="Approved" string="Approve"/>
                    <filter domain="[('state','in', ('PARTS', 'Parts'))]" name="Parts" string="Parts"/>
                    <filter domain="[('state','in', ('PICKUP', 'Pickup'))]" name="Pickup" string="PickUp"/>
                    <filter domain="[('state','in', ('INSPECT', 'Inspect'))]" name="Inspection" string="Inspection"/>
                    <filter domain="[('state','in', ('LIFT', 'Lift'))]" name="Lift" string="Lift"/>
                    <filter domain="[('state','in', ('TEST', 'Test'))]" name="Testing" string="Testing"/>
                    <filter domain="[('state','in', ('COMPLETE', 'Complete'))]" name="Complete" string="Complete"/>
                    <filter domain="[('state','in', ('DELIVER', 'Deliver'))]" name="Delivered" string="Delivered"/>
                    <filter domain="[('state','in', ('CANCEL', 'Cancel'))]" name="Cancled" string="Cancled"/>
                    <group expand="1" string="Group By">
                        <filter context="{'group_by':'partner_id'}" name="customer" string="Customer"/>
                        <filter context="{'group_by':'major_unit_id'}" name="vechile" string="Vehicle"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="service_report_action" model="ir.actions.act_window">
            <field name="name">Service Reports</field>
            <field name="res_model">custom.service.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot,graph</field>
            <field name="search_view_id" ref="view_task_sevice_user_search"/>
            <field name="context">{'group_by_no_leaf':1,'group_by':[]}</field>
            <field name="help">This report allows you to analyse the performance of your projects and users. You can analyse the quantities of tasks, the hours spent compared to the planned hours, the average number of days to open or close a task, etc.</field>
        </record>

        <menuitem action="service_report_action" id="service_report_history_menu" name="Service Reports" parent="service_Report_menu"/>
        <!-- ========================Reports End========================= -->
    </data>
</odoo>